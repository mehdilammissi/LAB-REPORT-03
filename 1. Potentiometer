// This code reads the position of a potentiometer connected to pin A0.
// It displays the raw value (0-1023) on the Serial Monitor.

// The setup() function runs once when the board is powered on or reset
void setup() {
  Serial.begin(9600);               // Initialize serial communication
}


// The loop() function runs continuously after setup() finishes
void loop() {
  int val = analogRead(A0);         // Read the analog value from pin A0
  Serial.println(val);              // Print the value to the Serial Monitor
  delay(100);                       // Wait for 100 milliseconds
}

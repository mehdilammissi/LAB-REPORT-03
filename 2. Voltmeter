// This code measures external voltage using a voltage divider connected to A0.
// It calculates the real voltage and prints the value in MILLIVOLTS (mV).

// The setup() function runs once when the board is powered on or reset
void setup() {
  Serial.begin(9600);               // Initialize serial communication
}


// The loop() function runs continuously after setup() finishes
void loop() {
  int raw = analogRead(A0);         // Read the raw analog value (0-1023)
  
  // Assumes R1=30k and R2=10k (Ratio is 4:1)
  // The calculation is V_in_mV = raw * (5000 mV * 4) / 1024
  // We use 20000L and 1024L (long) for required calculation precision.
  long V_in_mV = (long)raw * 20000L / 1024L; 
  
  Serial.print(V_in_mV);            // Print the voltage value
  Serial.println(" mV");            // Print the unit " mV"
  delay(100);                       // Wait for 100 milliseconds
}

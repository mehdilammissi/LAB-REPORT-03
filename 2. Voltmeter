// This code measures external voltage using a voltage divider connected to A0.
// It calculates the real voltage value and prints it in Volts.

// The setup() function runs once when the board is powered on or reset
void setup() {
  Serial.begin(9600);               // Initialize serial communication
}


// The loop() function runs continuously after setup() finishes
void loop() {
  int raw = analogRead(A0);         // Read the raw analog value (0-1023)
  float volt = raw * (5.0 / 1023.0);// Convert the raw value to voltage at A0
  float R1 = 30000.0;               // R1 value in Ohms (e.g., 30k)
  float R2 = 10000.0;               // R2 value in Ohms (e.g., 10k)
  
  float V_in = volt * ((R1 + R2) / R2); // Calculate the original input voltage

  Serial.print(V_in, 2);            // Print the voltage value (2 decimal places)
  Serial.println(" V");             // Print the unit " V"
  delay(100);                       // Wait for 100 milliseconds
}

// This code measures voltage using a voltage divider on pin A0.
// It calculates the real voltage and prints it to the Serial Monitor.

// The setup() function runs once when the board is powered on or reset
void setup() {
  Serial.begin(9600);               // Initialize serial communication
}


// The loop() function runs continuously after setup() finishes
void loop() {
  int raw = analogRead(A0);         // Read the raw analog value (0-1023)
  float volt = raw * (5.0 / 1023.0);// Convert the raw value to voltage
  
  // Note: Multiply 'volt' by the resistor ratio here for higher voltages
  
  Serial.print(volt);               // Print the voltage value
  Serial.println(" V");             // Print the unit " V"
  delay(100);                       // Wait for 100 milliseconds
}
